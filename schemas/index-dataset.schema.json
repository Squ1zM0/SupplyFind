{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://supplyfind.com/schemas/index-dataset.schema.json",
  "title": "Index Dataset",
  "description": "Schema for index/routing files that reference other datasets",
  "type": "object",
  "required": ["type", "state", "updated", "scope", "entries"],
  "properties": {
    "type": {
      "type": "string",
      "const": "index",
      "description": "Marks this as an index file"
    },
    "state": {
      "type": "string",
      "description": "State/province code (e.g., 'CO')"
    },
    "updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Last update date in YYYY-MM-DD format"
    },
    "scope": {
      "type": "object",
      "required": ["trade"],
      "properties": {
        "trade": {
          "type": "string",
          "enum": ["hvac", "plumbing", "electrical", "filter", "multi"],
          "description": "Trade focus of this index"
        }
      }
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "file"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Stable identifier for the area"
          },
          "name": {
            "type": "string",
            "description": "Human-readable name"
          },
          "file": {
            "type": "string",
            "description": "Relative path to the dataset file"
          }
        }
      },
      "description": "List of datasets referenced by this index"
    }
  }
}
